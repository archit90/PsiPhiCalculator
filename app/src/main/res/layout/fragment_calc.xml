<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.friedapps.scificalc.EditTextExtended
            android:id="@+id/edtxtCalcExpr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:editable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Expression" />

        <com.friedapps.scificalc.EditTextExtended
            android:id="@+id/edtxtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Result" />

        <GridLayout
            android:id="@+id/gridCalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <Button
                android:id="@+id/btnMvLeft"
                style="@style/MyButtonStyleSmallNumpad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:hint="&lt;"
                android:onClick="onButtonClick" />


            <Button
                android:id="@+id/btnMvRight"
                style="@style/MyButtonStyleSmallNumpad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:hint="&gt;"
                android:onClick="onButtonClick" />


            <Button
                android:id="@+id/btnDel"
                style="@style/MyButtonStyleSmallNumpad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="0"
                android:hint="&lt;--"
                android:onClick="onButtonClick" />

        </GridLayout>


        <GridLayout
            android:id="@+id/gridSc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:columnCount="5"
            android:rowCount="3">

            <Button
                android:id="@+id/btnHyp"
                style="@style/MyButtonStyleSmallAddonPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:hint="Hyp"
                android:onClick="onButtonClick" />

            <Button
                android:id="@+id/btnSin"
                style="@style/MyButtonStyleSmallAddonPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:hint="Sin"
                android:onClick="onButtonClick" />

            <Button
                android:id="@+id/btnCos"
                style="@style/MyButtonStyleSmallAddonPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:hint="Cos"
                android:onClick="onButtonClick" />

            <Button
                android:id="@+id/btnTan"
                style="@style/MyButtonStyleSmallAddonPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="0"
                android:hint="Tan"
                android:onClick="onButtonClick" />

            <Button
                android:id="@+id/btnAbs"
                style="@style/MyButtonStyleSmallAddonPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="0"
                android:hint="Abs"
                android:onClick="onButtonClick" />

            <Button
                android:id="@+id/btnLog10"
                style="@style/MyButtonStyleSmallAddonPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:hint="Log10"
                android:onClick="onButtonClick" />

            <Button
                android:id="@+id/btnLog2"
                style="@style/MyButtonStyleSmallAddonPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:hint="Log2"
                android:onClick="onButtonClick" />

            <Button
                android:id="@+id/btnLn"
                style="@style/MyButtonStyleSmallAddonPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:hint="Ln"
                android:onClick="onButtonClick" />

            <Button
                android:id="@+id/btnFact"
                style="@style/MyButtonStyleSmallAddonPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:hint="x!"
                android:onClick="onButtonClick" />

            <Button
                android:id="@+id/btnMode"
                style="@style/MyButtonStyleSmallAddonPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="1"
                android:hint="Mode"
                android:onClick="onButtonClick"
                android:textSize="18dp" />

        </GridLayout>


        <GridLayout
            android:id="@+id/gridMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <GridLayout
                android:id="@+id/gridNumpad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:columnCount="3"
                android:rowCount="4">

                <Button
                    android:id="@+id/btn7"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:hint="7"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:hint="8"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:hint="9"
                    android:onClick="onButtonClick" />


                <Button
                    android:id="@+id/btn4"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:hint="4"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:hint="5"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:hint="6"
                    android:onClick="onButtonClick" />


                <Button
                    android:id="@+id/btn1"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:hint="1"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:hint="2"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:hint="3"
                    android:onClick="onButtonClick" />


                <Button
                    android:id="@+id/btnDot"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:hint="."
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btn0"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:hint="0"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btnPlusMinus"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:hint="+/-"
                    android:onClick="onButtonClick" />

            </GridLayout>

            <GridLayout
                android:id="@+id/gridOps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:columnCount="2"
                android:rowCount="4">

                <Button
                    android:id="@+id/btnAdd"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:hint="+"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btnSubtract"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:hint="-"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btnMultiply"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:hint="&#215;"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btnDivide"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:hint="รท"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btnBrackets"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:hint="( )"
                    android:onClick="onButtonClick" />


                <Button
                    android:id="@+id/btnModulus"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:hint="%"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btnExponent"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:hint="^"
                    android:onClick="onButtonClick" />

                <Button
                    android:id="@+id/btnNRoot"
                    style="@style/MyButtonStyleSmallNumpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:hint="&#8730;"
                    android:onClick="onButtonClick" />
            </GridLayout>


        </GridLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:hint="Reset"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:hint="Answer"
                android:onClick="onButtonClick"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
